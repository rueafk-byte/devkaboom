{
  "name": "kaboom-web3-game",
  "version": "2.0.0",
  "description": "Modern Web3 blockchain game with real-time multiplayer capabilities, token rewards, and worldwide optimization",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "cluster": "NODE_ENV=production node -r dotenv/config server.js",
    "build": "echo 'Static files ready for deployment'",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "migrate": "node scripts/migrate.js",
    "deploy:vercel": "vercel --prod",
    "deploy:koyeb": "koyeb app init kaboom-web3-game --docker ./koyeb.yaml",
    "deploy:netlify": "netlify deploy --prod",
    "setup:dev": "npm install && cp .env.example .env",
    "setup:prod": "npm install --production && npm run migrate",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "analyze": "npm audit && npm outdated",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "docker:build": "docker build -t kaboom-web3-game .",
    "docker:run": "docker run -p 3000:3000 kaboom-web3-game",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "monitor": "node scripts/monitor.js"
  },
  "keywords": [
    "web3",
    "blockchain",
    "game",
    "solana",
    "tokens",
    "multiplayer",
    "real-time",
    "pwa",
    "vercel",
    "koyeb",
    "netlify",
    "deployment",
    "worldwide",
    "optimization"
  ],
  "author": "Kaboom Game Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/kaboom-web3-game.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/kaboom-web3-game/issues"
  },
  "homepage": "https://kaboom-game.com",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "axios": "^1.6.0",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "@project-serum/anchor": "^0.26.0",
    "ws": "^8.14.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "aws-sdk": "^2.1490.0",
    "cloudinary": "^1.41.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "supertest": "^6.3.3",
    "vercel": "^32.5.6",
    "netlify-cli": "^17.0.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "pwa": {
    "name": "Kaboom Web3 Game",
    "short_name": "Kaboom",
    "description": "Modern Web3 blockchain game with real-time multiplayer",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#667eea",
    "theme_color": "#ff6b6b",
    "icons": [
      {
        "src": "/favicon.ico",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "/favicon.ico",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  }
}
