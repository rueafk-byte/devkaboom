# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_PATH=./data/kaboom_game.db

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_TOKEN=your-admin-token-change-this-in-production

# CORS Configuration
FRONTEND_URL=http://localhost:3000
GAME_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=300

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Game Configuration
MAX_LIVES=5
RECHARGE_COOLDOWN_MINUTES=45
DEFAULT_BOOM_TOKENS=0

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@kaboom-game.com

# Monitoring Configuration (Optional)
SENTRY_DSN=
ANALYTICS_API_KEY=

# Production Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=
DOMAIN=kaboom-game.com
