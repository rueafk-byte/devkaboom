# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/kaboom_production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kaboom_production
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Solana Network Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Smart Contract Addresses (Mainnet)
BOOM_TOKEN_ADDRESS=your_boom_token_address
PIRATE_TOKEN_ADDRESS=your_pirate_token_address
ADMIRAL_TOKEN_ADDRESS=your_admiral_token_address
PLAYER_REGISTRY_ADDRESS=your_player_registry_address

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kaboom-game-assets

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Security
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=your_session_secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/socket.io

# Game Configuration
MAX_PLAYERS_PER_SESSION=1000
GAME_SESSION_TIMEOUT=3600000
LEADERBOARD_UPDATE_INTERVAL=300000
