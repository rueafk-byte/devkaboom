{
  "name": "kaboom-blockchain-adventure",
  "version": "2.0.0",
  "description": "Enhanced Kaboom: Blockchain Adventure - A 2D platformer game with Solana integration and robust backend",
  "main": "backend/server-enhanced.js",
  "scripts": {
    "start": "node backend/server-enhanced.js",
    "dev": "nodemon backend/server-enhanced.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint backend/ --ext .js",
    "lint:fix": "eslint backend/ --ext .js --fix",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "node scripts/backup-database.js",
    "logs:clean": "node scripts/clean-logs.js",
    "cache:clear": "node scripts/clear-cache.js",
    "health:check": "curl http://localhost:3000/health",
    "build": "npm run lint && npm test",
    "deploy:staging": "npm run build && pm2 start ecosystem.config.js --env staging",
    "deploy:production": "npm run build && pm2 start ecosystem.config.js --env production"
  },
  "keywords": [
    "kaboom",
    "blockchain",
    "solana",
    "game",
    "platformer",
    "web3",
    "nft",
    "defi"
  ],
  "author": "Kaboom Game Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.8",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaboom-game/blockchain-adventure.git"
  },
  "bugs": {
    "url": "https://github.com/kaboom-game/blockchain-adventure/issues"
  },
  "homepage": "https://kaboom-game.com"
}
